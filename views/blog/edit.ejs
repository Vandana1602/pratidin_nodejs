<%- include('../partials/header.ejs') %>
    <title>Edit</title>
    
    <%- include('../partials/navbar.ejs') %>

        <div class="container pt-3">

            <form action="/edit/<%=post._id%>" method="post" class="row g-3 needs-validation justify-content-center" novalidate>
                <h1 class="col-sm-7">Edit a Blog</h1>
                <div class="col-sm-7">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter a title"
                        value="<%=post.title%>" required>
                    <div class="invalid-feedback">
                        Please provide a title.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-sm-7">
                    <label for="hashtags" class="form-label">Hash tags</label>
                    <input type="text" class="form-control" id="hashtags" name="hashtags"
                        placeholder="Enter text for hashtags with space" value="<%=post.hashtags%>">
                </div>
                <div class="col-sm-7 ">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" rows="3" name="content" placeholder="Start writing here" 
                        required><%=post.content%></textarea>

                    <div class="invalid-feedback">
                        Content can't be empty.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-sm-7 ">
                    <label for="edited" class="form-label">Edited the post</label>
                    <select class="form-control" id="edited" name="edited">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <div class="col-sm-7">
                    <button class="btn btn-primary" type="submit">Edit</button>
                </div>
            </form>
        </div>
        <script src="formValidationJs.js" type="text/javascript"></script>
        <%- include('../partials/footer.ejs') %>